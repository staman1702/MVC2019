@model IEnumerable<ADO_NET_Komponente.Models.Polaznik>
@{
    ViewBag.Title = "List";
}
<!Doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @ViewBag.Message
    @TempData["Message"]
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.IdPolaznik)
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { idPolaznik = item.IdPolaznik }) |
                    @Html.ActionLink("Details", "Details", new { idPolaznik = item.IdPolaznik }) |
                    @Html.ActionLink("Delete", "Delete", new { idPolaznik = item.IdPolaznik }) 


                </td>
            </tr>
        }
    </table>
</body>
</html>
