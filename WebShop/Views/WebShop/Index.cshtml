@model IEnumerable<WebShop.Models.Proizvodi>


   

    @{ 
        ViewBag.Title = "Cart";
        var listCount = 0;
        if (Session["Cart"] != null)
        {
            List<WebShop.Models.Proizvodi> kosarica = Session["Cart"]
                as List<WebShop.Models.Proizvodi>;
            listCount = kosarica.Count();
        }
    }
<p>
    @Html.ActionLink(linkText: "Cart", actionName: "Index", controllerName: "Cart") (@listCount)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VrijemeKreiranja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dostupan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MjereProizvoda.Naziv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VrijemeKreiranja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cijena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dostupan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MjereProizvoda.Naziv)
        </td>
        <td>
           @Html.ActionLink(linkText: "Add to cart", actionName: "AddToCart", controllerName: "Cart",
          routeValues: new { id = item.Id },
          htmlAttributes: new { @class = "btn btn-default" })

        </td>
    </tr>
}

</table>
