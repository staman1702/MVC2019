@model Kotrola_gresaka.Models.MetaRacun
@{
    ViewBag.Title = "MetaIzdavanjeRacuna2";
    Html.EnableClientValidation(false);
}


<style>
    label {
        width: 150px;
        padding-top: 10px;
        display: inline-block;
    }
</style>

<h2>IzdavanjeRacuna</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        <label>Broj računa:</label>
        @Html.EditorFor(x => x.BrojRacuna)
        @Html.ValidationMessageFor(x => x.BrojRacuna)
    </div>
    <div>
        <label>Datum:</label>
        @Html.EditorFor(x => x.Datum)
        @Html.ValidationMessageFor(x => x.Datum)
    </div>
    <div>
        <label>Zaposlenik:</label>
        @Html.EditorFor(x => x.Zaposlenik)
        @Html.ValidationMessageFor(x => x.Zaposlenik)
    </div>
    <div>
        <label>Kupac:</label>
        @Html.EditorFor(x => x.Kupac)
        @Html.ValidationMessageFor(x => x.Kupac)
    </div>
    <div>
        <label>Cijena:</label>
        @Html.EditorFor(x => x.Cijena)
        @Html.ValidationMessageFor(x => x.Cijena)
    </div>

    <input type="submit" value="Pošalji" />

}




